<!DOCTYPE html>
<html>
  <head>
    <title>Database of CRISPR Screen Data</title>
  </head>
  <body>
  <div>CRISPR DB:
        <a href="{{ url_for('index') }}">Home</a>
  </div>
  <h1>Database of CRISPR Screen Data</h1>
  <form action="" method="post" name="search">
	  {{ form.hidden_tag() }}
        <table class="table" id="conditions" width="100%">
            <thead>
            <tr>
            <th>Species</th>
            <th>Tech.</th>
            <th>Biological Source</th>
            <th>Condition</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ form.species }}</td>
                <td>{{ form.tech }}</td>
                <td>{{ form.cell_line }}</td>
                <td>{{ form.drug }}</td>
            </tr>
            <tr>
                <td>{{ form.gene }} <input type="submit" value="Search"></td>
            </tr>
            </tbody>
        </table>
  </form>
  {% with messages = get_flashed_messages() %}
      {% if messages %}
        <ul>
        {% for message in messages %}
            <li>{{ message }} </li>
        {% endfor %}
        </ul>
      {% endif %}
  {% endwith %}
  {% block content %}{% endblock %}
  </body>
</html>
